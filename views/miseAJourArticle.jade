doctype
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='/javascripts/script.js')
  body
    h1 bienvenu renseigner l'article
    form(methode = 'put', action = 'enregistrement')
      fieldset
        legend Informations sur le produit
        label(for='idArticle') id de l'article &#1645?&nbsp;&nbsp;
        br
        input(type='text', name='idArticle',id='idArticle',value = '#{monArticle.idArticle}', onblur = 'return verifChamp(this)', tablindex='1',disabled='disabled', accesskey='n') 
        label(for='dateDeCreation') id de l'article &#1645?&nbsp;&nbsp;
        br
        input(type='text', name='dateDeCreation',id='dateDeCreation',value = '#{monArticle.dateDeCreation}', onblur = 'return verifChamp(this)', tablindex='1',disabled='disabled', accesskey='n') 
        label(for='nom') nom de l'article &#1645?&nbsp;&nbsp;
        br
        input(type='text', name='nom',id='nom',value = '#{monArticle.nom}', onblur = 'return verifChamp(this)', tablindex='1',required='required', accesskey='n')        
        br
        label(for='marque') Marque de l'article &#1645?&nbsp;&nbsp;
        br
        input(type='text', name='marque',id='marque',value = '#{monArticle.marque}',onblur = 'return verifChamp(this)', tablindex='1',required='required', accesskey='n')        
        br
        label(for='model') model de l'article &#1645?&nbsp;&nbsp;
        br
        input(type='text', name='model',id='model',value = '#{monArticle.model}',onblur = 'return verifChamp(this)', tablindex='1',required='required', accesskey='n')        
        br
        label(for='prix') Prix de l'article &#1645?&nbsp;&nbsp;
        br
        input(type='text', name='prix',id='prix',value = '#{monArticle.prix}',onblur = 'return verifPrix(this)', placeholder='0.00', tablindex='1',required='required', accesskey='n')
        &nbsp;$       
        br
        label(for='categorie') choisi une categorie de l'article
        br
        select(size='1',name = 'categorie', id = 'categorie')
          option(value='#{monArticle.categorie}')
          option(value='Desktops') Desktops
          option(value='Laptops') Laptops
          option(value='Accessoires') Accessoires
          option(value='Logiciels') Logiciels
          option(value='PDAs') PDAs
          option(value='photo') Photo 
          option(value='LecteursMP3') LecteursMP3
        br
        label(for='desc') rediger votre article &#1645?: &nbsp;&nbsp;
        br
        textarea(accesskey='d',rows='20' ,cols='100',value = '#{monArticle.desc}', name='desc',onblur = 'return verifChamp(this)', placeholder='redigez votre article ici...', id = 'desc',required='required')
        br
        label(for='Image') inclure une image ou un fichier: &nbsp;&nbsp;
        input(type='file', name='Image', accept='image/pdf', id = 'image')
        br
      input(type="buttom", value="Udapte", onclick='return verifModifChamp()')
      input(type='reset', value='annuller')
    br        
